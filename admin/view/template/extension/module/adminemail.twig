{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
	{% if error_nopixels %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_nopixels }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
	{% endif %}
	<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
		<div class="tab-content">
		  <div class="tab-pane active" id="tab-status">
		  	<div class="form-group">
              <label class="col-sm-3 control-label" for="input-status">{{ entry_status }}</label>
              <div class="col-sm-3">
                <select name="module_adminemail_status" id="input-status" class="form-control">
                  {% if module_adminemail_status %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                  {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                  {% endif %}
                </select>
              </div> 
			</div>
			<br />
            <div class="form-group">
              <label class="col-sm-3 control-label" for="input-images">{{ entry_images }}</label>
              <div class="col-sm-3">
                <select name="images" id="input-images" class="form-control">
                  {% if images == 1 %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                  {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                  {% endif %}
                </select>
              </div>
		    </div>
            <div class="form-group">
			  <label class="col-sm-3 control-label" for="input-orientation">{{ entry_orientation }}</label>
              <div class="col-sm-3">
                <select name="orientation" id="input-orientation" class="form-control">
                  {% if orientation == text_height %}
                  <option value="Height" selected="selected">{{ text_height }}</option>
                  <option value="Width">{{ text_width }}</option>
                  {% else %}
                  <option value="Height">{{ text_height }}</option>
                  <option value="Width" selected="selected">{{ text_width }}</option>
                  {% endif %}
                </select>
              </div>
            </div>
		    <div class="form-group">
			  <label class="col-sm-3 control-label" for="pixels">{{ entry_pixels }}</label>
              <div class="col-sm-3">
              <input type="text" name="pixels" cols="3" size="3" value="{{ pixels }}" placeholder="{{ entry_pixels }}" id="pixels" class="form-control" /></input>
			  {% if error_nopixels %}
                <div class="text-danger">{{ error_nopixels }}</div>
			  {% endif %} 
            </div>
		  </div>
        </div>
      </div>
    </form>
	</div>
  </div>
</div>
{{ footer }}