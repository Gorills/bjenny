{{ header }}
{# container none #}

<a href="#" class="new">
  <div class="new__inner">
    <p class="new__button btn-white">New</p>
  </div>
  <img src="image/catalog/background/bg-desc.jpg" alt="" class="new__img">
</a>


<div class="collection">
  <div class="container-custom">
    <div class="collection__wrap">
      <h2 class="title">Коллекция</h2>
      <div class="collection__pager">
        <div class="collection__button-prev"><</div>
        <div class="collection__button-next">></div>
      </div>
    </div>
    <div class="swiper-viewport">
      <div id="carousel{{ module }}" class="swiper-container">
        <div class="swiper-wrapper">
        {% for category in categories %}
          <div class="swiper-slide text-center">
          
            <a href="{{ category.href }}" class="collection__item">
                <img class="collection__image" src="{{ category.image }}" alt="{{ category.name }}">
                <p class="collection__title">{{ category.name }}</p>
              </a>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<a href="#" class="new">
  <div class="new__inner">
    <p class="new__button btn-white">New</p>
  </div>
  <img src="image/catalog/background/bg-sale.jpg" alt="" class="new__img">
</a>





<div id="common-home">
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">
      {{ content_top }}
     
      {{ content_bottom }}
    </div>
    {{ column_right }}</div>
</div>






<script type="text/javascript"><!--



function windowSize(){
    if( $(window).width()  >= 768 ) {
      $('#carousel{{ module }}').swiper({
      mode: 'horizontal',
      slidesPerView: 4,
      
      paginationClickable: true,
      nextButton: '.collection__button-next',
      prevButton: '.collection__button-prev', 
      autoplay: false,
      loop: false,
      spaceBetween: 20
    });
    } else {  
     $('#carousel{{ module }}').swiper({
      mode: 'horizontal',
      slidesPerView: 2,
      
      paginationClickable: true,
      nextButton: '.collection__button-next',
      prevButton: '.collection__button-prev', 
      autoplay: false,
      loop: false,
      spaceBetween: 20
    });

    }
}

// или "два-в-одном", вместо двух последних строк:
$(window).on('load resize',windowSize);


--></script>

