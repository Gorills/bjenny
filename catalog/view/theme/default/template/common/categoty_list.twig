<div class="collection">
  <div class="container-custom">
    <div class="collection__wrap">
      <h2 class="title">Коллекция</h2>
      <div class="collection__pager">
        <div class="collection__button-prev"><</div>
        <div class="collection__button-next">></div>
      </div>
    </div>
    <div class="swiper-viewport">
      <div id="carousel{{ module }}" class="swiper-container">
        <div class="swiper-wrapper">
        {% for category in categories %}
          <div class="swiper-slide text-center">
          
            <a href="{{ category.href }}" class="collection__item">
                <img class="collection__image" src="{{ category.image }}" alt="{{ category.name }}">
                <p class="collection__title">{{ category.name }}</p>
              </a>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript"><!--

$('#carousel{{ module }}').swiper({
	mode: 'horizontal',
	slidesPerView: 4,
	
	paginationClickable: true,
	nextButton: '.collection__button-next',
  prevButton: '.collection__button-prev', 
	autoplay: false,
	loop: false,
  spaceBetween: 20
});
--></script>